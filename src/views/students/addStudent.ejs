<%- include('../header') %>

    <h3>Students Section</h3>

    <br>
    <div class="container">
        <h4>Add student</h4>
        <form action="/app/students/add" method="post">
            <% if (errors.name) { %>
                <%= errors.name.msg %>
                    <% } %>
                        <input class="form-control shadow-none mb-3 phText" type="text" name="name" id="inputName"
                            placeholder="Student name">
                        <% if (errors.stream) { %>
                            <%= errors.stream.msg %>
                                <% } %>
                                    <input class="form-control shadow-none mb-3 phText" type="text" name="stream"
                                        id="inputStream" placeholder="Stream">
                                    <% if (errors.department) { %>
                                        <%= errors.department.msg %>
                                            <% } %>
                                                <input class="form-control shadow-none mb-3 phText" type="text"
                                                    name="department" id="inputDepartment" placeholder="Department">
                                                <% if (errors.batch) { %>
                                                    <%= errors.batch.msg %>
                                                        <% } %>
                                                            <input class="form-control shadow-none mb-3 phText"
                                                                type="text" name="batch" id="inputBatch"
                                                                placeholder="Batch">
                                                            <% if (errors.dob) { %>
                                                                <%= errors.dob.msg %>
                                                                    <% } %>
                                                                        <input
                                                                            class="form-control shadow-none mb-3 phText"
                                                                            type="text" name="dob" id="inputDob"
                                                                            placeholder="DOB">
                                                                        <% if (errors.mobile_no) { %>
                                                                            <%= errors.mobile_no.msg %>
                                                                                <% } %>
                                                                                    <input
                                                                                        class="form-control shadow-none mb-3 phText"
                                                                                        type="text" name="mobile_no"
                                                                                        id="inputMobile"
                                                                                        placeholder="Mobile Number">
                                                                                    <button type="submit"
                                                                                        class="btn btn-primary">Submit</button>
        </form>
    </div>


    <%- include('../footer') %>